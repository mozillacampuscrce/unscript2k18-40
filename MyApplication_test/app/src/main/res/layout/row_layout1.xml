<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="450sp"
    android:layout_margin="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/base_img"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/back3" />

        <TextView
            android:id="@+id/name_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/base_img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="name" />

        <TextView
            android:id="@+id/loc_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_tweet"
            android:layout_below="@+id/name_tweet"
            android:layout_marginTop="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loc_tweet"
            android:layout_below="@+id/loc_tweet"
            android:layout_marginTop="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/res_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_tweet"
            android:layout_below="@+id/text_tweet"
            android:layout_marginTop="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/url_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/res_tweet"
            android:layout_below="@+id/res_tweet"
            android:layout_marginTop="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tweet_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/url_tweet"
            android:layout_marginBottom="10dp"
            android:text="TextView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>