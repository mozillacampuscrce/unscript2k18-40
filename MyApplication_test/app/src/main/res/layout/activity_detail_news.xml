<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.somesh.news.Detail_news">

    <ImageView
        android:id="@+id/tx_img"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back1" />

    <TextView
        android:id="@+id/tx_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tx_img"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"
        android:text="Title :" />

    <TextView
        android:id="@+id/tx_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tx_title1"
        android:layout_marginTop="15dp"
        android:text="Abstract :" />

    <TextView
        android:id="@+id/tx_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:onClick="website"
        android:textColor="@android:color/holo_orange_light"
        android:text="URL :"
        tools:ignore="OnClick" />
</RelativeLayout>
